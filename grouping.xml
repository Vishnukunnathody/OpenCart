<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Grouping-Suite" verbose="3"  >
	<groups>
		<run>
			<include name="Master"></include>
			<!--<exclude name="DataDriven"></exclude> -->
			<!--<exclude name="Sanity"></exclude>-->
		</run>
      </groups>
      
	<listeners>
		
		<listener class-name="utils.ReportUtil"></listener>
		<listener class-name="utils.RetryUtil"></listener>
		
	</listeners>
	
	<test  name="Test">
		<parameter name="os" value="Windows"></parameter>       <!-- Created parameter with os Windows -->
		<parameter name="browser" value="chrome"></parameter>   <!-- Created parameter with browser chrome -->
		<classes>
			<class name="tests.LoginTest"></class>
			<class name="tests.RegisterTest"></class>
			<class name="tests.LogoutTest"></class>
		</classes>
	</test>
	
</suite> 
